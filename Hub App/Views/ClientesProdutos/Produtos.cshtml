@using Hub_App.Models.ClientesProdutos
@{
    ViewData["Title"] = "Produtos";
    var produtos = ViewBag.Produtos as List<Produto>;
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
}
<div class="container">
    <h2 class="mb-4">Produtos Cadastrados</h2>
    <form method="get" asp-action="Produtos" class="mb-2">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Pesquisar produtos por nome" name="searchTerm" value="@searchTerm" />
            <button class="btn btn-outline-secondary" type="submit">Pesquisar</button>
        </div>
    </form>
    <!-- Cards para exibição de produtos -->
    <div class="row">
        @if (produtos != null && produtos.Any())
        {
            foreach (var produto in produtos)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <a href="@Url.Action("EditarProduto", "ClientesProdutos", new { id = produto.Id })" style="text-decoration: none">
                        <img src="@produto.FotoItem" class="card-img-top" alt="Foto do produto" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-text">Preço: R$ @produto.Preco.ToString("F2")</p>
                        </div>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p>Nenhum produto cadastrado.</p>
            </div>
        }
    </div>

    <hr />

    <!-- Formulário para adicionar novos produtos -->
    <h3>Adicionar Novo Produto</h3>
    <form asp-action="AdicionarProduto" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Nome">Nome do Produto</label>
            <input type="text" class="form-control" id="Nome" name="Nome" required />
        </div>
        <div class="form-group">
            <label for="Preco">Preço</label>
            <input type="number" step="0.01" class="form-control" id="Preco" name="Preco" required />
        </div>
        <div class="form-group">
            <label for="FotoItem">Link foto do produto</label>
            <input type="text" class="form-control" id="FotoItem" name="FotoItem" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Adicionar Produto</button>
    </form>
</div>